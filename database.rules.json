{
  "rules": {
    "users": {
      "$user_id": {
        ".read":  "$user_id === auth.uid",
        ".write": "$user_id === auth.uid"
      },
	  ".indexOn": ["uid", "isAnonymous"]
    },
    "reports": {
      ".read":  "auth != null",
      ".write": "auth != null"
    },
	"daily": {
	  "head": {
        ".read":  "auth != null",
	  },
	  "head_submit": {
		".write": "auth != null",
	  },
	  "reports": {
	    ".read":  "auth != null"
	  }
    }
  }
}